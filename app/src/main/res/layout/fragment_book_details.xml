<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="@string/book_details_transition_name"
        android:paddingBottom="@dimen/margin_large"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_very_small"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cv_image" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fake_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_image"
                tools:text="Flashcdmsksdkcj;skjd cklsdf vkjlsd fvjsdkcm skdcmksdmcjsndcsojdncojsndcosdkcosdncosndcosdncosndcosdncosdncosdncoksd fvjsd fvjsdjnf vjlnsd fvjdns fvdnf vsd fnvfilm women's" />

            <TextView
                android:id="@+id/tv_authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_book_title"
                tools:text="lerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvflerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvflerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvflerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvflerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvf" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_details" />

        <TextView
            android:id="@+id/tv_"
            android:text="Subjects"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_2x_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_details"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:justificationMode="inter_word"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:maxLines="10"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_large"
            tools:text="ثقتبدثتقدبثنق بنثق بنبثکن ثتقدب نتثدقب نتثدقب نتثدق بنتثدق بمنتثدقبنت ثدقبن تث دقبنث تدقبنتدثقبنتد ثقبت ندثنقتبد ثنت قدبنث تدب نمثتد قبنتثدقب نتثد قبن تثدقبنتثق بث قبنlerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvflerfmerf n/n\n\fdferferfcsdl,csld,csldkcdsdcsd,/n\nerdfvdfvdfvdfvfتث قبنثت قبدثنت قبدن ثت قب ثتن قبدثن ت قدبن ث قبنت ثق دبنث تقدب"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_"
            app:layout_constraintHorizontal_bias="0" />

        <View
            android:id="@+id/v_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />


        <TextView
            android:id="@+id/tv_items_title"
            style="@style/textRegular12"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:text="Publisher(s)"
            app:layout_constraintEnd_toStartOf="@+id/tv_items_count"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line3" />

        <TextView
            android:id="@+id/tv_items_count"
            style="@style/textRegular12"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_items_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_items_title"
            android:text="Publish year(s)" />

        <TextView
            android:id="@+id/tv_items_prices"
            style="@style/textRegular12"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_items_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_items_count"
            app:layout_constraintTop_toTopOf="@+id/tv_items_count"
            app:layout_constraintVertical_bias="0.0"
            android:text="Publish place(s)" />


        <!-- vat is included in price-->
        <TextView
            android:id="@+id/tv_publishers"
            style="@style/textRegular12"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:text=""
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/tv_items_title"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/tv_items_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_items_title" />

        <TextView
            android:id="@+id/tv_publish_years"
            style="@style/textRegular12"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_publishers"
            app:layout_constraintEnd_toEndOf="@+id/tv_items_count"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_items_count"
            app:layout_constraintTop_toTopOf="@+id/tv_publishers"
            tools:text="3" />

        <TextView
            android:id="@+id/tv_publish_places"
            style="@style/textRegular12"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_publish_years"
            app:layout_constraintEnd_toEndOf="@+id/tv_items_prices"
            app:layout_constraintStart_toStartOf="@+id/tv_items_prices"
            app:layout_constraintTop_toTopOf="@+id/tv_publish_years"
            tools:text="$80" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
